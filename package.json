{
  "name": "next-chunk",
  "version": "1.0.2",
  "description": "Asynchronously returns the next chunk in a Node.js readable stream",
  "author": "Gustaf Räntilä",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/grantila/next-chunk/issues"
  },
  "homepage": "https://github.com/grantila/next-chunk#readme",
  "type": "module",
  "main": "./index.ts",
  "exports": "./index.ts",
  "types": "./index.ts",
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "publishConfig": {
    "main": "./dist/index.js",
    "exports": "./dist/index.js",
    "types": "./dist/index.d.ts"
  },
  "scripts": {
    "build": "rimraf dist && tsc -p tsconfig.prod.json",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "buildtest": "npm run build && npm run test",
    "cz": "git-cz"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/grantila/next-chunk.git"
  },
  "keywords": [
    "next",
    "chunk",
    "stream",
    "readable",
    "promise"
  ],
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@babel/preset-env": "^7.16.5",
    "@babel/preset-typescript": "^7.16.5",
    "@types/jest": "^27.0.3",
    "@types/node": "^17.0.0",
    "@types/through2": "^2.0.0",
    "cz-conventional-changelog": "^3.3.0",
    "get-stream": "6.0.1",
    "jest": "^27.4.5",
    "rimraf": "^3.0.2",
    "through2": "^4.0.2",
    "ts-jest-resolver": "^2.0.0",
    "typescript": "^4.5.4"
  },
  "jest": {
    "resolver": "ts-jest-resolver",
    "testEnvironment": "node",
    "coverageReporters": [
      "lcov",
      "text",
      "html"
    ],
    "extensionsToTreatAsEsm": [
      ".ts"
    ]
  }
}
